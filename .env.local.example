# Environment Variables Template
# Copy this file as .env.local and fill in your actual API keys

# ============================================================================
# STRIPE CONFIGURATION (International Payments)
# Get from: https://dashboard.stripe.com/apikeys
# ============================================================================

STRIPE_PUBLIC_KEY=pk_test_REPLACE_WITH_YOUR_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_WEBHOOK_SECRET

# ============================================================================
# TELR CONFIGURATION (UAE Payments - AED)
# Get from: https://telr.com/merchants
# ============================================================================

TELR_API_KEY=REPLACE_WITH_YOUR_API_KEY
TELR_STORE_ID=REPLACE_WITH_YOUR_STORE_ID
TELR_AUTHKEY=REPLACE_WITH_YOUR_AUTH_KEY
TELR_SANDBOX_MODE=true

# ============================================================================
# EMAIL CONFIGURATION (For Confirmation Emails)
# ============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@myfounders.club

# ============================================================================
# APP CONFIGURATION
# ============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_PAYMENT_CURRENCY=AED

